# ~/.config/ghostty/config
# ------------------------------------------------------------------------------
# ghostty config — macOS acrylic-style setup
# notes: comments must be on their own lines (no inline comments)
# ------------------------------------------------------------------------------


# --- core ---
font-family = "SFMono Nerd Font"
command = /bin/zsh
window-save-state = always
window-colorspace = display-p3

# --- cursor -------
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor

# --- padding ---
# left/right and top/bottom padding (points)
window-padding-x = 6,2
window-padding-y = 6,8
# even out fractional remainder so the grid stays centered
window-padding-balance = true
# blend edge padding with nearest cell color
window-padding-color = extend

# --- background / “acrylic” ---
# opacity is 0..1; macOS requires a full restart after changing this
background-opacity = 0.97
# integer blur strength; 20–35 gives a nice frosted look
background-blur = 35

# --- titlebar ---
# translucent titlebar that matches the window background
macos-titlebar-style = hidden
window-decoration = auto

# a single space effectively hides the title text
# optional: keep translucency in fullscreen by using non-native fullscreen
# macos-non-native-fullscreen = true
#

# ----------------------------------------
# Keybinding
# ----------------------------------------
#macos-option-as-alt = true

# Navigation (always consume so no CSI-u prints when there's only one pane)
keybind = cmd+ctrl+h=goto_split:left
keybind = cmd+ctrl+j=goto_split:down
keybind = cmd+ctrl+k=goto_split:up
keybind = cmd+ctrl+l=goto_split:right

# Resize (bind both Shift forms for reliability across layouts)
keybind = cmd+ctrl+shift+h=resize_split:left,24
keybind = cmd+ctrl+shift+j=resize_split:down,24
keybind = cmd+ctrl+shift+k=resize_split:up,24
keybind = cmd+ctrl+shift+l=resize_split:right,24
keybind = cmd+ctrl+H=resize_split:left,24
keybind = cmd+ctrl+J=resize_split:down,24
keybind = cmd+ctrl+K=resize_split:up,24
keybind = cmd+ctrl+L=resize_split:right,24

# Your symbol semantics:
# SIDE-BY-SIDE (right) – both \ and |
keybind = cmd+ctrl+backslash=new_split:right
keybind = cmd+ctrl+shift+backslash=new_split:right

# STACKED (below) – both - and _
keybind = cmd+ctrl+minus=new_split:down
keybind = cmd+ctrl+shift+minus=new_split:down

# Extras (nice to have, terminal-layer only)
keybind = cmd+ctrl+z=toggle_split_zoom
keybind = cmd+ctrl+e=equalize_splits
keybind = cmd+ctrl+x=close_surface

# Default window dimensions in cells (columns x rows)
window-width = 190
window-height = 52


# --- themes ---
# active theme (dark/light pair)
theme = dark:catppuccino-frape-mocha,light:catppuccino-frape-mocha

# quick switches (uncomment one line below to swap)
# theme = dark:catppuccin-mocha,light:catppuccin-mocha
# theme = dark:rose-pine,light:xcodelighthc
#theme = dark:catppuccin-mocha-strong,light:catppuccin-mocha-latte
