# ~/.ignore â€” generated by Ansible (home_shims)
# Edit locally if you want; re-run Ansible to update.

# --- Hide most of ~/Library, but keep selected subtrees ---
Library/**
{% for inc in ignore_library_include | default(['Library/CloudStorage']) -%}
!{{ inc }}/**
{% endfor %}

# --- Top-level folders under $HOME to hide entirely ---
{% for name in ignore_top_level | default(['Movies','Music','Pictures']) -%}
{{ name }}/**
{% endfor %}

# --- Specific subpaths (relative to $HOME) to hide ---
{% for p in ignore_custom_paths | default([]) -%}
{{ p }}/**
{% endfor %}

# --- Noisy dotdirs at $HOME root ---
{% for d in ignore_dotdirs | default(['.cache','.npm','.pyenv','.venvs','.Trash','.zsh_sessions','.local/pipx']) -%}
{{ d }}/**
{% endfor %}

# --- Dev/build noise anywhere in the tree ---
{% for n in ignore_dev_anywhere | default(['.git','node_modules','__pycache__','.venv','venv','.mypy_cache','.pytest_cache']) -%}
**/{{ n }}/**
{% endfor %}

# --- Misc junk ---
**/.DS_Store
