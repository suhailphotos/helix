# Load brew environment for interactive shells too (brew shellenv is in .zprofile)
if [[ -o interactive && ! -o login && -r "$HOME/.zprofile" ]]; then
  source "$HOME/.zprofile"
fi

# Ensure cargo bin is on PATH (needed for mac_dev cargo-installed apogee)
if [[ -d "$HOME/.cargo/bin" ]]; then
  export PATH="$HOME/.cargo/bin:$PATH"
fi

# Apogee (replaces Orbit)
if command -v apogee >/dev/null 2>&1; then
  eval "$(apogee)"
fi

# Starship (if installed)
if command -v starship >/dev/null 2>&1; then
  eval "$(starship init zsh)"
fi
